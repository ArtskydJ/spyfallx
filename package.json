{
  "name": "spyfallx",
  "version": "1.0.0",
  "description": "Spyfall",
  "main": "index.js",
  "scripts": {
    "test": "glob-module-file --pattern=\"+(server|shared)/**/*.test.js\" --format=cjs | node",
    "prep-build": "run-p create-symlinks",
    "build": "npm-run-all prep-build --parallel build:*",
    "build:js": "rollup -c rollup.config.js",
    "watch:js": "rollup -c -w --dev",
    "watch:glob": "watch \"npm run glob\" client/service client/view",
    "create-symlinks": "del-cli client/node_modules && make-dir client/node_modules/ && cd client/node_modules && symlink ../shared/ shared && cd ../../",
    "build:css": "postcss-alt \"client/view/**/*.css\" \"public/build/style.css\"",
    "watch:css": "postcss-alt \"client/view/**/*.css\" \"public/build/style.css\" --watch=\"client/**/*.css\"",
    "serve": "node server/index.js",
    "dev:old": "cross-env NODE_ENV=development npm-run-all prep-build --parallel watch:* serve",
    "dev": "NODE_DEBUG=ioredis:* nodemon ./server/index.js"
  },
  "keywords": [
    "spyfall"
  ],
  "author": "TehShrike",
  "license": "WTFPL",
  "dependencies": {
    "array-shuffle": "1.0.1",
    "combine-arrays": "1.0.2",
    "cross-env": "5.1.3",
    "del-cli": "^1.1.0",
    "gamblers-dice": "1.0.1",
    "glob-module-file": "2.2.0",
    "hard-rejection": "1.0.0",
    "hash-brown-router": "^3.4.0",
    "ioredis": "3.2.2",
    "just-uuid4": "1.0.0",
    "koa": "^2.5.0",
    "koa-bestest-router": "^1.0.2",
    "koa-body": "4.0.4",
    "koa-compress": "^2.0.0",
    "koa-conditional-get": "^2.0.0",
    "koa-etag": "^3.0.0",
    "koa-send": "^4.1.3",
    "loud-rejection": "1.6.0",
    "make-dir-cli": "^1.0.0",
    "mannish": "3.2.0",
    "npm-run-all": "4.1.2",
    "postcss": "^6.0.19",
    "postcss-advanced-variables": "^2.3.3",
    "postcss-alt-cli": "1.0.1",
    "precss": "3.1.0",
    "reandom": "0.0.2",
    "rollup": "0.55.1",
    "rollup-plugin-commonjs": "8.3.0",
    "rollup-plugin-json": "2.3.0",
    "rollup-plugin-node-resolve": "3.0.2",
    "rollup-plugin-svelte": "4.1.0",
    "rollup-plugin-visualizer": "^0.3.1",
    "rollup-watch": "4.3.1",
    "svelte": "1.60.2",
    "svelte-preprocess-postcss": "1.0.0",
    "svelte-querystring-router": "1.7.0",
    "symlink-cli": "1.0.0",
    "zora": "2.0.1"
  },
  "devDependencies": {
    "nodemon": "1.17.5"
  }
}
